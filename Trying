[HttpGet("GetClaimsByPolicyHolderId/{policyHolderId}")]
public async Task<ActionResult<IEnumerable<ClaimDto>>> GetClaimsByPolicyHolderId(int policyHolderId)
{
    var claims = await _context.Claims
                               .Where(c => c.PolicyHolderId == policyHolderId)
                               .ToListAsync();

    if (claims == null || claims.Count == 0)
    {
        return NotFound();
    }

    return Ok(_mapper.Map<List<ClaimDto>>(claims));
}
