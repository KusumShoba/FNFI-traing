using System;
using System.Collections.Generic;
using System.Linq;

public class Program
{
    class StringComparer : IComparer<string>
    {
        public string Compare(string word1compareTo,string word1compareWith)
        {
            var firstWord=word1compareTo.Split("by",StringSplitOptions.TrimEntries);
            var secondWord=word1compareWith.Split("by",StringSplitOptions.TrimEntries);
            if(firstWord[1].CompareTo(secondWord[1])==0)
            {
                return firstWord[0].CompareTo(secondWord[0]);
            }
            else
            {
                return firstWord[1].CompareTo(secondWord[1]);
            }

        }
    }
    // Helper function to extract the first author and the title from the input string
    public static KeyValuePair<string, string> ExtractAuthorAndTitle(string entry)
    {
        string[] parts = entry.Split(new string[] { "\" by " }, StringSplitOptions.None);
        string title = parts[0].Trim('"', ' ');
        string firstAuthor = parts[1].Split(new string[] { " and " }, StringSplitOptions.None)[0];
        return new KeyValuePair<string, string>(firstAuthor, title);
    }

    public static List<string> SortTitles(List<string> titles)
    {
        // Create a list of KeyValuePair containing (first_author, title)
        var extracted = titles.Select(entry => ExtractAuthorAndTitle(entry)).ToList();

        // Sort the list of KeyValuePair first by author and then by title
        var sortedExtracted = extracted.OrderBy(x => x.Key).ThenBy(x => x.Value).ToList();

        // Extract the sorted titles
        var sortedTitles = sortedExtracted.Select(x => x.Value).ToList();

        return sortedTitles;
    }

    public static void Main()
    {
        List<string> titles = new List<string>
        {
            "\"The Canterbury Tales\" by Chaucer", //Using the escape sequence for multiple ""
            "\"Algorithms\" by Sedgewick",
            "\"The C Programming Language\" by Kernighan and Ritchie"
        };

        // Function call and output
        List<string> sortedTitles = SortTitles(titles);
        foreach (string title in sortedTitles)
        {
            Console.WriteLine(title);
        }

        var list=new List<string>
        {
             "The Canterbury Tales by Chaucer", //Using the escape sequence for multiple ""
            "Algorithms by Sedgewick",
            "The C Programming Language by Kernighan and Ritchie"
        }
        
    }
}


